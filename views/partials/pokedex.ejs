<style type="text/css" media="screen">
  .pokedex-container {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
      }
    .cards {
        display: flex;
        flex-wrap: wrap;
        flex-shrink: 1;
        gap: 2rem;
      }
      .card {
        min-width: 8rem;
        min-height: 8rem;
        background-color: #eff4f1;
        display: flex;
        color: #7c382c;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        padding: 0.7rem;
        border-radius: 1rem;
        gap: 0.3rem;
        transition: all 0.3s ease 0s;
        transition: 0.3s;
      }
      .cards-container {
        padding: 2rem;
      }
      .poke-name {
        align-self: center;
        margin-bottom: 0.4rem;
      }
      img {
        width: 10rem;
        height: 10rem;
        border-radius: 1rem;
        align-self: center;
      }
  .card:hover {
        box-shadow: rgb(229, 96, 73,0.30) 0px 3px 3px 3px;
        transform: translateY(-0.6rem);
      }
</style>
<div class="pokedex-partial">
<section class="pokedex-container">
  <section class="cards-container">
    <ul class="pokedex-cards cards">
      <% for(let i=0;i<data.length;i++){%>
      <li class="pokedex-item">
        <div class="card">
         <img src="images/<%=data[i].name.toLowerCase()%>.png" alt="">
        <span class="poke-name"><%=data[i].name%></span>
        <span class="hp">HP: <%=data[i].hp%></span>
        <span class="type"> Type: <%=data[i].type%></span>
        <span class="attack">Attack: <%=data[i].attack%> </span>
        <span class="defense">Defense: <%=data[i].defense%></span>
        <span class="legendary">Legendary: <%=data[i].is_legendary == 0 ? 'No' : 'Yes'%></span>
        </div>
      </li>
      <%}%>
    </ul>
  </section>
</section>
</div>