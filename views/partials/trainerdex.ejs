<style type="text/css" media="screen">
  .trainerdex-container {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
      }
    .cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        /* display: grid;
        grid-template-columns: repeat( auto-fill, minmax(170px, 1fr));
        grid-gap: 3rem; */
        gap:2rem;
      }
      .card {
        width: max-content;
        /* min-width: 8rem; */
        min-height: 8rem;
        background-color: #eff4f1;
        display: flex;
        color: #7c382c;
        flex-direction: column;
        flex-grow: 1;
        justify-content: flex-start;
        align-items: flex-start;
        padding: 0.9rem;
        border-radius: 1rem;
        gap: 1rem;
        transition: all 0.3s ease 0s;
        transition: 0.3s;
      }
      .cards-container {
        padding: 2rem;
        width: 100%;
        height: 100%;
      }
      .trainer-name {
        align-self: center;
        margin-bottom: 0.4rem;
      }
      img {
        width: 10rem;
        height: 10rem;
        border-radius: 1rem;
      }
  .card:hover {
        box-shadow: rgb(229, 96, 73,0.30) 0px 3px 3px 3px;
        transform: translateY(-0.6rem);
      }
</style>
<div class="trainerdex-partial">
<section class="trainerdex-container">
  <section class="cards-container">
    <ul class="trainerdex-cards cards">
      <% for(let i=0;i<tdata.length;i++){%>
      <li class="trainerdex-item">
        <div class="card">
        <img src="../images/<%=tdata[i].Tname %>.png" alt="">
        <span class="trainer-name"><%=tdata[i].Tname%></span>
        <span class="type"> Pokemon: <%=tdata[i].Pokemon%></span>
        <span class="gym">Gym: <%=tdata[i].Gname%> </span>
        <span class="badge">Badge: <%=tdata[i].Badges%> </span>
        <span class="attack">Age: <%=tdata[i].TAge%> </span>
        </div>
      </li>
      <%}%>
    </ul>
  </section>
</section>
</div>