<!DOCTYPE html>
<html>
  <head>
    <title>PokeDex</title>
    <style type="text/css" media="screen">
      * {
        margin: 0;
        padding: 0;
      }
      body {
        background-color: #ffc2c4;
        text-decoration-color: white;
        overflow-x: hidden;
      }
      .title {
        text-align: center;
        font-size: 3rem;
      }
      .pokedex-container {
        display: flex;
        align-items: center;
        justify-content: center;
      }
      ul {
        /* font-size: 1.6rem; */
        list-style: none;
      }
      .header {
        margin-bottom: 3rem;
      }
      .cards {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
      }
      .card {
        min-width: 9rem;
        min-height: 9rem;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        border: 1px black solid;
        padding: 1rem;
        gap: 0.3rem;
      }
      .cards-container {
        padding: 2rem;
      }
      .poke-name {
        align-self: center;
        margin-bottom: 0.4rem;
      }
    </style>
  </head>

  <body>
    <%- include ('partials/header.ejs')%> <%- include ('partials/query.ejs')%>
    <%- include ('partials/pokedex.ejs')%> <%- include ('partials/footer.ejs')%>
  </body>
</html>

